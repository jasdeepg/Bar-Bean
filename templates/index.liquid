<div id="col-main">

<!--style all of this -->
<section id='popular-products-section'>
  <div class='row big-break'>
    POPULAR PRODUCTS
  </div>
  <div class='row featured-products-overall'>
    {% for product in collections.popular-1.products %}
        <div class=' item {% for tag in product.tags %} {{tag}} {% endfor %}' data-id='{{product.variants.first.id}}' data-product='{{product.handle}}'>
          {% include 'product-grid-item' %}
        </div>
    {% endfor %}
  </div>
  <div class='row view-more'>
    <a href='http://lp-beta.myshopify.com/collections/all'>VIEW ALL PRODUCTS</a>
  </div>
</section>

<!-- fact section -->
<section id='featured-fact-section'>
  <div class='row minor-break'>
    NEW WAVE OF CHOCOLATE
  </div>
  <div class='row featured'>
    {% include 'featured-fact-grid' %}
  </div>
</section>

<!-- artisan section -->
<section id='featured-artisan-section'>
  <div class='row minor-break'>
    MAKER OF THE MONTH
  </div>
  <div class='row featured'>
    {% include 'featured-artisan-grid' %}
  </div>
&nbsp;
  <div class='row big-break'>
    PRODUCTS BY PATRIC CHOCOLATE
  </div>
  <div class='row featured-products-artisan'>
    {% for product in collections.patric.products %}
        <div class='item {% for tag in product.tags %} {{tag}} {% endfor %}'>
          {% include 'product-grid-item' %}
        </div>
    {% endfor %}
  </div>
  <div id='hide-link' style='display:none'>{{ 'Patric' | link_to_vendor}}</div>
  <div class='row view-more' id='show-link'>
    <a href='http://lp-beta.myshopify.com/collections/all'>VIEW MORE PATRIC CHOCOLATE PRODUCTS</a>
  </div>
</section>

<!-- script for adding isotope support -->
<script type="text/javascript">
  $(function(){
    set_prod_hover_event();
    
    $('.featured-products-artisan').isotope({
      itemSelector :'.item',
      masonry: {
        columnWidth: 1
      },
      getSortData : {
        percent : function ( $elem ) {
          return $elem.attr('data-percent');
        }
      }
    });
  });
  </script>

  <script type="text/javascript">
    var link = $('#hide-link a').attr('href')
    $('#show-link a').attr('href', link)
  </script>

</div><!-- /#col-main -->
