    <a href="#">
      <span class="icon">
       {{ 'cart.png' | asset_url | img_tag }}(<span id='cart-count'>{{ cart.item_count }}</span>)
      </span>
    </a>
    <div class='cart-panel'>
      <hr style='margin-top:10px;margin-bottom:10px'>
      SHOPPING CART
      <hr style='margin-top:10px;margin-bottom:10px'>
      <div id='product-rows-grid'>
      {% for item in cart.items %}
        <div class='product-preview row' id='product-cart-{{ item.id }}'>
          <div class='large-3 columns bar-image' style="width:150px;height:150px;background: url('{{ item.product.featured_image | product_img_url: 'large' |}}') center center no-repeat;background-size:cover"></div>
          <div class='large-8 columns' id='description'>
          <div class='row'>
              <div class='large-9 columns' style='padding:0'>
                <p>{{ item.vendor | upcase}}</p>
                <p>{{ item.title | upcase}}</p>
              </div>
              <div class='large-3 columns' id='left-cart-desc-side' style='padding:0'>
                <p>{{ item.quantity }} {{ item.quantity | pluralize: 'BAR', 'BARS'}} </p>
              </div>
            </div>
          </div>
          <script type="text/javascript">
            var total_price = {{ item.price }}*{{ item.quantity }}/100;
            console.log('price ' + {{ item.price }}/100 )
            console.log('quant ' + {{ item.quantity }})
            console.log(total_price)
            $('#product-cart-{{ item.id }} #left-cart-desc-side').append('<p class="price">$'+total_price+'</p>')
          </script>
        </div>
        <hr>
      {% endfor %}
    </div>
      <div class='row'>
        <div id='checkout-action-button' class='row'>
          <a href="/cart/add" class='button alert'>CHECKOUT</a>
        </div>
        <div class='cart-summary'>
          <div class='row'>
            <p id='total-cart-count' style='text-align:center'>{{ cart.item_count }} {{ cart.item_count | pluralize: 'BAR', 'BARS' }}</p>
          </div>
          <div class='row'>
            {% assign total_price = cart.total_price/100 %}
            <script type="text/javascript">
              var overall_price = 0;

              $('.price').html('$ '+ {{ cart.total_price }}/100)
            </script>
            <p style='text-align:center' class='price'></p>
          </div>
        </div>
      </div>
    </div>