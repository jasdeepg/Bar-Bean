<div class='gridViewImageContainer action-bar-learn' data-product='{{product.handle}}' data-id='{{product.id}}' style='background: url("{{ product.featured_image | product_img_url: "medium" }}") center no-repeat;'></div>
<span class='gridViewProductTitle'>{{ product.title }}</span>
<br>
<span class='gridViewVendorTitle'>{{ product.vendor | upcase | link_to_vendor }}</span>
<br>
<span class='gridViewSubTitle'>Price {{ product.price | money_with_currency }}</span>
<br>
<span class='gridViewSubTags'>TAGS: {{ product.description }}</span>
<div class='row gridViewActionContainer' style='width:100%'>
  <div class='large-6 columns'>
    <a href='#' class='action-buy small button expand' onclick="$('body').scrollTop(); var f = document.createElement('form'); f.style.display = 'none'; f.setAttribute('id','form-{{ product.variants.first.id }}'); this.parentNode.appendChild(f); f.method = 'POST'; f.action = this.href; var v = document.createElement('input'); v.setAttribute('type', 'hidden'); v.setAttribute('name', 'id'); v.setAttribute('value', '{{product.variants.first.id }}'); f.appendChild(v); var q = document.createElement('input'); q.setAttribute('type', 'hidden'); q.setAttribute('name', 'quantity'); q.setAttribute('value', 1); f.appendChild(q); var r = document.createElement('input'); r.setAttribute('type', 'hidden'); r.setAttribute('name', 'return_to'); r.setAttribute('value', 'back'); return false;">ADD</a>
  </div>
  <div class='large-6 columns'>
    <a href'#' class='action-bar-learn small button expand' data-product='{{product.handle}}' data-id='{{product.id}}'>LEARN</a>
  </div>
</div>
